        if(! undetected)
            numDetected++;
    }
    WEIGHT(-2.0 * log(numDetected / static_cast<floating_t>(numSamples)));
    NEXT = NULL;//sampleFinalLambda; // this was a probabilistic simulation, so resampling is needed
